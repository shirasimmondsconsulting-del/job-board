{
  "name": "jobboard-backend",
  "version": "1.0.0",
  "description": "Backend API for Job Board Application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon --require C:\\global-dns.js server.js",
    "test": "jest --forceExit --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "convert-usd-to-ils": "node scripts/convert-usd-to-ils.js",
    "remove-country-from-jobs": "node scripts/remove-country-from-jobs.js",
    "remove-country-from-companies": "node scripts/remove-country-from-companies.js",
    "remove-application-deadline": "node scripts/remove-application-deadline.js",
    "build": "npm install",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop all",
    "pm2:restart": "pm2 restart all",
    "pm2:logs": "pm2 logs"
  },
  "keywords": [
    "job",
    "board",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.13.4",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^7.0.0",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.0",
    "mongodb": "^7.1.0",
    "mongoose": "^7.0.0",
    "mongoose-paginate-v2": "^1.9.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.3",
    "redis": "^4.6.5",
    "slug": "^0.9.4",
    "socket.io": "^4.6.1",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "eslint": "^8.42.0",
    "jest": "^29.5.0",
    "mongodb-memory-server": "^8.16.1",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3"
  }
}
